@model DoAnhKiet_2280601617.Models.Student

@{
    ViewData["Title"] = "Đăng ký chuyên ngành";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container mt-5">
    <h2 class="mb-4">Đăng ký chuyên ngành</h2>
    <form asp-action="ShowKQ" method="post" class="row g-3">
        <div class="col-md-6">
            <label asp-for="Id" class="form-label">MSSV</label>
            <input asp-for="Id" class="form-control" />
        </div>
        <div class="col-md-6">
            <label asp-for="Name" class="form-label">Họ tên</label>
            <input asp-for="Name" class="form-control" />
        </div>
        <div class="col-md-6">
            <label asp-for="DTB" class="form-label">Điểm trung bình</label>
            <input asp-for="DTB" class="form-control" />
        </div>
        <div class="col-md-6">
            <label asp-for="ChuyenNganh" class="form-label">Chuyên ngành</label>
            <select asp-for="ChuyenNganh" class="form-select">
                <option value="CNPM">CNPM</option>
                <option value="HTTT">HTTT</option>
                <option value="ANM">ANM</option>
                <option value="TTNT">TTNT</option>
                <option value="MMT">MMT</option>
            </select>
        </div>
        <div class="col-12">
            <button type="submit" class="btn btn-primary">Đăng ký</button>
        </div>
    </form>
</div>
